<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.insercaoimagens.controller.CadastrarCursoController"
            prefWidth="400" prefHeight="250">

    <children>
        <VBox spacing="12" alignment="TOP_CENTER"
              AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
              AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <!-- Campo de ID -->
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="ID:" prefWidth="80"/>
                    <TextField fx:id="textFieldId" promptText="Código do curso" />
                </HBox>
                <!-- Campo de Nome -->
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label text="Nome:" prefWidth="80"/>
                    <TextField fx:id="textFieldNome" promptText="Nome do curso" />
                </HBox>
                <!-- Botões -->
                <HBox spacing="20" alignment="CENTER">
                    <Button fx:id="buttonSalvar"
                            text="Salvar"
                            onAction="#handleSalvar"
                            prefWidth="100"/>
                    <Button fx:id="buttonVoltar"
                            text="Voltar"
                            onAction="#handleVoltar"
                            prefWidth="100"/>
                </HBox>
                <!-- Label de resultado -->
                <Label fx:id="labelResultado"
                       wrapText="true"
                       maxWidth="360"
                       textAlignment="CENTER"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
